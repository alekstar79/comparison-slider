{
  "name": "@alekstar79/comparison-slider-ts",
  "private": false,
  "version": "1.0.0",
  "type": "module",
  "main": "./lib/index.js",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "license": "MIT",
  "author": "Aleksey Tarasenko <alekstar79@yandex.ru>",
  "homepage": "https://github.com/alekstar79/comparison-slider.git",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alekstar79/comparison-slider.git"
  },
  "bugs": {
    "url": "https://github.com/alekstar79/comparison-slider/issues"
  },
  "keywords": [
    "typescript",
    "images",
    "comparison",
    "slider",
    "library"
  ],
  "files": [
    "lib",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js"
    },
    "./plugins/*": {
      "types": "./lib/plugins/*.d.ts",
      "import": "./lib/plugins/*.js"
    },
    "./style.css": "./lib/styles/style.css",
    "./plugins/SavePlugin.css": "./lib/styles/SavePlugin.css",
    "./plugins/LabelPlugin.css": "./lib/styles/LabelPlugin.css",
    "./plugins/FilterPlugin.css": "./lib/styles/FilterPlugin.css",
    "./plugins/MagnifierPlugin.css": "./lib/styles/MagnifierPlugin.css"
  },
  "scripts": {
    "dev": "vite",
    "build": "yarn build:lib && vite -c vite.config.ts build",
    "build:lib": "vite -c vite.lib.config.ts build",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "glob": "^13.0.0",
    "typescript": "^5.4.5",
    "vite": "^5.2.11",
    "vite-plugin-dts": "^3.9.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
